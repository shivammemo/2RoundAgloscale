<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AdminPanel</title>
    <style>
        *{
            background-color: lightgray;
        }
        .display{
            margin-left: 15%;
        }
        .btn{
            margin-left: 8%;
            width: 150px;
            border-radius: 5px;
            background-color: white;
        }
        .btn:hover{
            color: red;
        }
        .button{
            margin-left: 50%;
            border-radius: 20px;
            text-decoration: none;
    border: 1px solid black;
    background-color: black;
    color: #FFFFFF;
    font-size: 12px;
    font-weight: bold;
    padding: 12px 45px;
    letter-spacing: 1px;
    text-transform: uppercase;
    transition: transform 80ms ease-in;
        }
    </style>
</head>
<body>
    <h1 style="text-align: center;">List of Existing User</h1>
    <% users.forEach(function(user){ %>
    <div class="display">
       <ol style="list-style-type:none;">
           <li style="font-weight: bold;font-size: 25px;">USER</li>
           <ul>
               <li style="font-size: 20px;">Name:&nbsp;&nbsp;<%= user.name %></li>
               <li style="font-size: 20px;">Email:&nbsp;&nbsp;<%= user.email %></li>
               <br>
               <form action="/users/<%=user._id%>?_method=DELETE" method="POST" >
                    <button class="btn">Delete</button>
               </form>
           </ul>
       </ol>
    </div>
    <% }); %>
    <a href="/logout" class="button">Logout</a>
</body>
</html>